<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/padding_all"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_view_movie"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_all"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_all"
            android:layout_marginRight="@dimen/padding_all"
            android:text="@string/title"
            android:textSize="@dimen/size_title"
            android:textStyle="bold"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/tv_description_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_all"
            android:layout_marginRight="@dimen/padding_all"
            android:text="@string/description"
            android:textSize="@dimen/size_description"
            android:textColor="@color/colorPurple"/>
    </LinearLayout>

</LinearLayout>